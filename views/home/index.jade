extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-offset-9.small-3.columns
      form#startgame(action='/', method='post')
        fieldset
          legend Start Game
          .row
            mixin field(12, 'text', 'player', 'Player', null, 'Your Name', true)
            .small-12.columns
              select#difficulty(name='difficulty')
                option(value='default') Difficulty
                option(value= 'easy') Easy
            //- mixin field(12, 'text', 'difficulty', 'Difficulty', null, 'Easy', true)
          .row
            .small-12.columns
              button#start.expand.radius.small(type='submit') Start Game
  .row
    .small-offset-9.small-3.columns
      button#shuffle.expand.radius.small.hidden Shuffle
  .row
    .small-12.columns
      #game



